{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "incremental": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "ts-build",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": false,
    "target": "esnext",
    "paths": {
      "tools/*": ["src/tools/*"],
      "componentBase/*": ["src/base/*"],
    }
  },
  "include": ["src/**/*", "**/*.d.ts", "**/*.ts"]
}